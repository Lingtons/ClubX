@model IEnumerable<DataAccess.Models.ClubSchedule>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClubDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubEndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Virtual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VirtualLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClubDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClubStartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClubEndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Virtual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VirtualLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Club.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
