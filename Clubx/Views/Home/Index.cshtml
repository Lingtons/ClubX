@model IEnumerable<DataAccess.Models.ClubSchedule>
@using DataAccess.Utils;
@{
    ViewData["Title"] = "Home Page";
}

<div class="">
    <h1 class="display-4">Sessions</h1>
</div>

@if (Model.Any())
{
    <div class="row mt-4">
        @foreach (var meeting in Model)
        {
            <div class="col-md-6">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="@meeting.Club.ImageUrl" class="card-img img-fluid" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@meeting.SessionTitle</h5>
                                <p class="card-text">@meeting.Club.Description</p>
                                <p class="card-text">
                                    @(Options.GetLookupName(meeting.ClubDay)+" From "+ Options.GetLookupName(meeting.ClubStartTime)+" To "+ Options.GetLookupName(meeting.ClubEndTime))

                                    @if (!meeting.Virtual)
                                    {
                                        <span class=" badge badge-pill badge-secondary">Physical</span>
                                    }
                                    else
                                    {
                                        <span class=" badge badge-pill badge-info">Virtual</span>
                                    }

                                </p>
                                @*<p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>*@
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer">
                                <a asp-controller="Home" asp-action="ViewClub" asp-route-id="@meeting.Club.Id" class="btn btn-sm btn-outline-primary text-dark">View @meeting.Club.Name</a>
                                <a asp-controller="Home" asp-action="ViewClub" asp-route-id="@meeting.Club.Id" class="btn btn-sm btn-outline-info text-dark">Book this Session</a>
                                
                                <span>@(meeting.Capacity+" slots left")</span>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        }
    </div>
}



